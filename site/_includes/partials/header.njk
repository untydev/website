<header class="bg-transparent">
  <div class="max-w-3xl mx-auto p-8 md:flex md:items-center md:justify-between">
    <nav class="w-full flex flex-col items-start sm:flex-row sm:justify-between sm:items-center">

      <!-- Left side -->

      <div>
        <a href="/" class="logo dark:text-zinc-100 text-xl lg:text-2xl tracking-wide" aria-hidden="true">
          <span class="sr-only">Untypical</span>
          <img class="is-dark h-7 sm:h-8 hidden" src="/images/logo-dark.svg" alt="">
          <img class="is-light h-7 sm:h-8 hidden" src="/images/logo.svg" alt="">
        </a>
      </div>

      <!-- Right side -->

      <div class="mt-1 sm:mt-0">
        <div class="flex items-center justify-center space-x-5 md:order-2">

          <!-- About -->

          <a href="/about" class="text-md text-zinc-900 dark:text-zinc-100 hover:text-zinc-500 dark:hover:text-zinc-400">
            About
          </a>

          <!-- LinkedIn -->

          <a href="https://www.linkedin.com/in/dsobczyk/" class="text-zinc-900 dark:text-zinc-100 hover:text-zinc-500 dark:hover:text-zinc-400">
            LinkedIn
          </a>

          <!-- Twitter -->

          <a href="https://twitter.com/untydev" class="text-zinc-900 dark:text-zinc-100 hover:text-zinc-500 dark:hover:text-zinc-400">
            Twitter
          </a>

          <!-- GitHub -->

          <a href="https://www.github.com/untydev" class="text-zinc-900 dark:text-zinc-100 hover:text-zinc-500 dark:hover:text-zinc-400">
            GitHub
          </a>

          <!-- Switch mode -->

          <button id="themeToggleBtn" class="text-zinc-900 dark:text-zinc-100 hover:text-zinc-500 dark:hover:text-zinc-400">

            <!-- Sun icon -->

            <span class="is-dark hidden">
              <span class="sr-only">Switch to light mode</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
              </svg>
            </span>

            <!-- Moon icon -->

            <span class="is-light hidden">
              <span class="sr-only">Switch to dark mode</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
              </svg>
            </span>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
